<!-- ****************** FORM TO ADD BOOK ********************* -->

<div class="container-fluid add">
<div class="row">
<div class="col-md-6 offset-md-3">  
  <form id="addbook" method="POST" action="/addbook/add" onsubmit="return validate();" enctype="multipart/form-data">
  <h1>Add Book</h1>
  <div class="form-group">
    <label for="Title">Book Title </label>
    <small id="title1" class="text-danger">*</small>
    <input type="text" class="form-control" id="Title" name="title">
    
  </div>
  <div class="form-group">
    <label for="Author" >Author </label>
    <small id="author" class="text-danger">*</small>
    <input type="text" class="form-control" id="Author" name="author">
    
  </div>
  
  <div class="form-group">
    <label for="genere">Genere </label>
    <small id="genre" class="text-danger">*</small>
    <input type="text" class="form-control" id="genere" name="genre" >
  </div>
  <div class="form-group">
    <label for="image">Image </label>
    <small id="image" class="text-danger">*</small>
    <input type="file"  id="input" onchange="showFiles()" name="image" accept="image/*">
    <img id="preview">
  </div>
  <button type="submit" class="btn btn-primary btn-block">Add Book</button>
</form>
</div>
