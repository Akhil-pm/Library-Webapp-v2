               <div class="container sl">
                <h1 id="heading">Edit Author</h1>

                <div class="row row1">
                  <div class="image col-md-4" style="display:inline-block">
                     <img src="/images/<%=author.image%>" width="150" height="200" >
                  </div>
                 <div class="about col-md-8" style="display:inline-block">
                 <form  method="POST" action="/authors/update" enctype="multipart/form-data">  
                   <input type="hidden" value="<%=author._id%>" name="id" > <br>

                   <div class="form-group form-inline">
                    <label class="labels" for="name">Name</label>               
                    <input type="text" class="form-control" value="<%=author.name%>" name="name" >
                  </div>

                  <div class="form-group form-inline">
                    <label class="labels" for="nationality">Nationality</label>               
                    <input type="text" class="form-control" value="<%=author.nationality%>" name="nationality" >
                  </div>

                  <div class="form-group form-inline">
                    <label class="labels" for="category">Category</label>               
                    <input type="text" class="form-control" value="<%=author.category%>" name="category" >
                  </div>
                  <div class="form-group form-inline">
                    <label for="image">Image</label>               
                    <input type="file" class="form-control" value="<%=author.image%>" name="image" accept="image/*" required>
                  </div>
                  <div class="button">
                    <button type="submit" class="btn btn-primary btn-dark custom-btn" >Update</button>
                </div>
                  </form>

                 </div>
               </div>
                </div>
              


               



            
