<!-- ****************** SIGNUP FORM ********************* -->

<div class="container-fluid signup">
            <div class="row">
            <div class="col-md-6 offset-md-3">  
              <form id="sign" method="POST" action="/signup/register" onsubmit="return validate()">
              <h1>Sign Up</h1>

              
              <div class="form-group">
                <label for="Name">Name </label>
                <small id="name1" class="text-danger">** required</small>
                <input type="text" class="form-control" id="Name" placeholder="Full Name" name="name">
                
              </div>
              <div class="form-group">
                <label for="UserName">Username</label>
                <small id="usname" class="text-danger">** required</small>
                <input type="text" class="form-control" id="UserName" placeholder="Desired username" name="username">
                
              </div>
              <div class="form-group">
                <label for="phoneNumber">Phone Number</label>
                <small id="pnum" class="text-danger">** required</small>
                <input type="text" class="form-control" id="phoneNumber" placeholder="Ph No" name="phonenumber">
                
              </div>
              <div class="form-group">
                <label for="inputEmail">Email</label>
                <small id="mail" class="text-danger">** required</small>
                <input type="text" class="form-control" id="inputEmail" placeholder="Email" name="email">
                
              </div>
              <div class="form-group">
                <label for="InputPassword1">Password</label>
                <small id="pass1" class="text-danger">** required</small>
                <input type="password" class="form-control" id="InputPassword1" placeholder="password" name="password">
                
              </div>
              <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <small id="pass2" class="text-danger">** required</small>
                <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm password">
                
              </div>

           
              <button type="submit" class="btn btn-primary btn-block">Register</button>

              <p class="msg">Already a member? <a href="/login">Login here</a></p>

            </form>
            </div>
            </div>
          </div>


